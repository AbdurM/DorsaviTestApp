<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DorsaviTestApp.Views.HomePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="http://prismlibrary.com"
    Title="Home"
    prism:ViewModelLocator.AutowireViewModel="True">
    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding SettingsCommand}" Text="Settings" />
    </ContentPage.ToolbarItems>
    <StackLayout>
        <BoxView
            BackgroundColor="LightGray"
            HeightRequest="2"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="Start" />
        <!--  Person List  -->
        <CollectionView
            HorizontalOptions="FillAndExpand"
            ItemsSource="{Binding PeopleCollection}"
            VerticalOptions="FillAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid
                        ColumnDefinitions="*,*,*"
                        HeightRequest="75"
                        RowDefinitions="*,*">
                        <!--  Name  -->
                        <Label Margin="10,10,0,0" Text="{Binding Name}" />
                        <!--  Gender  -->
                        <Label
                            Grid.Row="1"
                            Margin="10,0,0,15"
                            Text="{Binding Gender}" />
                        <Label
                            Grid.RowSpan="2"
                            Grid.Column="1"
                            HorizontalOptions="Center"
                            Text="{Binding Age, StringFormat='Age: {0}'}"
                            VerticalOptions="Center" />
                        <!--  Chevron Right  -->
                        <Label
                            Grid.RowSpan="2"
                            Grid.Column="2"
                            Margin="0,0,10,0"
                            FontSize="Title"
                            HorizontalOptions="EndAndExpand"
                            Text="&#8250;"
                            VerticalOptions="Center" />
                        <!--  Divider  -->
                        <BoxView
                            Grid.Row="1"
                            Grid.ColumnSpan="3"
                            BackgroundColor="LightGray"
                            HeightRequest="2"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="EndAndExpand" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>